

@{
    ViewBag.Title = "Human Resouce Management";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="">
    <meta name="author" content="">
    <link rel="icon" type="image/png" sizes="16x16" href="~/Design/plugins/images/131155logo.png">
    <title>@ViewBag.Title</title>
    <!-- Bootstrap Core CSS -->
    <link href="~/Design/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Menu CSS -->
    <link href="~/Design/plugins/bower_components/sidebar-nav/dist/sidebar-nav.min.css" rel="stylesheet">
    <!-- toast CSS -->
    <link href="~/Design/plugins/bower_components/toast-master/css/jquery.toast.css" rel="stylesheet">
    <!-- morris CSS -->
    <link href="~/Design/plugins/bower_components/morrisjs/morris.css" rel="stylesheet">
    <!-- animation CSS -->
    <link href="~/Design/css/animate.css" rel="stylesheet">
    <!-- Custom CSS -->
    <link href="~/Design/css/style.css" rel="stylesheet">
    <!-- color CSS -->
    <link href="~/Design/css/colors/blue-dark.css" id="theme" rel="stylesheet">

</head>
<body style="font-family:Arial">
    <!-- Preloader -->
    <div class="preloader">
        <div class="cssload-speeding-wheel"></div>
    </div>
    <div id="wrapper">
        <!-- Navigation -->
        <nav class="navbar navbar-default navbar-static-top m-b-0">
            <div class="navbar-header" style="background-color:#0A4F86">
                <a class="navbar-toggle hidden-sm hidden-md hidden-lg " href="javascript:void(0)" data-toggle="collapse" data-target=".navbar-collapse">
                    <i class="fa fa-bars">
                    </i>
                </a>
                <div class="top-left-part" style="background-color:plum">
                    <a class="logo" href="@Url.Action("Index","Home")">
                        <b>
                            <img style="width:50px; height:50px;" src="~/Design/login/images/aitlogo.png" alt="home">
                        </b>
                        <span class="hidden-xs" style="font-size:23px;">
                            Aureole IT
                        </span>
                    </a>
                </div>
                <ul class="nav navbar-top-links navbar-left m-l-20 hidden-xs">
                    <li>
                        <form role="search" class="app-search hidden-xs">
                            <input type="text" placeholder="Search..." class="form-control"> <a href=""><i class="fa fa-search"></i></a>
                        </form>
                    </li>
                </ul>

                @if (Session["MaNhanVien"] != null)
                {
                    <ul class="nav navbar-top-links navbar-right pull-right">
                        <li>
                            <a class="profile-pic" href="#">
                                <img src="~/Design/plugins/images/users/user.png" alt="user-img" width="36" class="img-circle"><b class="hidden-xs">
                                    @if (HttpContext.Current.Session["MaNhanVien"] != null)
                                    {
                                        @Session["HoTen"]
                                    }
                            </b>
                        </a>
                    </li>
                    <li>
                        <a href="@Url.Action("Logout","NhanVien_PhongBan")">Logout</a>
                    </li>
                </ul>
            }
            else
            {
                <ul class="nav navbar-top-links navbar-right pull-right">
                    <li>
                        <a href="@Url.Action("Login","NhanVien_PhongBan")">Login</a>
                    </li>
                </ul>
            }


            </div>
            <!-- /.navbar-header -->
            <!-- /.navbar-top-links -->
            <!-- /.navbar-static-side -->
        </nav>
        <!-- Left navbar-header -->
        <div class="navbar-default sidebar" role="navigation">
            <div class="sidebar-nav navbar-collapse slimscrollsidebar" style="background-color:#4997DF; font-size:15px;">
                <ul class="nav" id="side-menu">

                    <li style="padding: 10px 0 0;">
                        <a href="@Url.Action("Index","Home")" class="waves-effect"><i class="fa fa-clock-o fa-fw" aria-hidden="true"></i><span class="hide-menu">Dashboard</span></a>
                    </li>

                    <li>
                        <a href="@Url.Action("Index","NhanVien")" class="waves-effect"><i class="fa  fa-group fa-fw" aria-hidden="true"></i><span class="hide-menu">Employee</span></a>
                    </li>

                    <li>
                        <a href="@Url.Action("Index","PhongBan")" class="waves-effect"><i class="fa fa-archive fa-fw" aria-hidden="true"></i><span class="hide-menu">Department</span></a>
                    </li>

                    <li>
                        <a href="@Url.Action("Index","ChucVu")" class="waves-effect"><i class="fa fa-child fa-fw" aria-hidden="true"></i><span class="hide-menu">Position</span></a>
                    </li>

                    <li>
                        <a href="@Url.Action("Index","TaiKhoan")" class="waves-effect"><i class="fa fa-user fa-fw" aria-hidden="true"></i><span class="hide-menu">Account</span></a>
                    </li>

                    <li>
                        <a href="@Url.Action("PageComingSoon","ComingSoon")" class="waves-effect"><i class="fa fa-money fa-fw" aria-hidden="true"></i><span class="hide-menu">Salary</span></a>
                    </li>

                    <li>
                        <a href="@Url.Action("PageComingSoon","ComingSoon")" class="waves-effect"><i class="fa fa-credit-card fa-fw" aria-hidden="true"></i><span class="hide-menu">Labor Contract</span></a>
                    </li>

                    <li>
                        <a href="@Url.Action("PageComingSoon","ComingSoon")" class="waves-effect"><i class="fa fa-mortar-board fa-fw" aria-hidden="true"></i><span class="hide-menu">Literacy</span></a>
                    </li>

                    <li>
                        <a href="@Url.Action("PageComingSoon","ComingSoon")" class="waves-effect"><i class="fa fa-calendar fa-fw" aria-hidden="true"></i><span class="hide-menu">Schedule</span></a>
                    </li>

                </ul>
            </div>
        </div>
        <!-- Left navbar-header end -->
        <!-- Page Content -->
        <div id="page-wrapper">
            <div class="container-fluid">
                @RenderBody()
            </div>
                <!-- /.container-fluid -->
            <footer style="background-color:#0A4F86" class="footer text-center"> <b style="color:white;">NGUYEN MINH DUY - Copyright © by Aureole Information Technology Inc. - MINI PROJECT</b> </footer>
            </div>
            <!-- /#page-wrapper -->
        </div>

    <!-- /#wrapper -->
    <!-- jQuery -->
    <script src="~/Design/plugins/bower_components/jquery/dist/jquery.min.js"></script>
    <!-- Bootstrap Core JavaScript -->
    <script src="~/Design/bootstrap/dist/js/bootstrap.min.js"></script>
    <!-- Menu Plugin JavaScript -->
    <script src="~/Design/plugins/bower_components/sidebar-nav/dist/sidebar-nav.min.js"></script>
    <!--slimscroll JavaScript -->
    <script src="~/Design/js/jquery.slimscroll.js"></script>
    <!--Wave Effects -->
    <script src="~/Design/js/waves.js"></script>
    <!--Counter js -->
    <script src="~/Design/plugins/bower_components/waypoints/lib/jquery.waypoints.js"></script>
    <script src="~/Design/plugins/bower_components/counterup/jquery.counterup.min.js"></script>
    <!--Morris JavaScript -->
    <script src="~/Design/plugins/bower_components/raphael/raphael-min.js"></script>
    <script src="~/Design/plugins/bower_components/morrisjs/morris.js"></script>
    <!-- Custom Theme JavaScript -->
    <script src="~/Design/js/custom.min.js"></script>
    <script src="~/Design/js/dashboard1.js"></script>
    <script src="~/Design/plugins/bower_components/toast-master/js/jquery.toast.js"></script>

