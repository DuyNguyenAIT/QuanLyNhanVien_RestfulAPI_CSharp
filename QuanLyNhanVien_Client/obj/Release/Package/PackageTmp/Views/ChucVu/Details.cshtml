@using QuanLyNhanVien_Client.ViewModel;

@model ChucVuViewModel

    <div class="row bg-title">
        <div class="col-lg-3 col-md-4 col-sm-4 col-xs-12">
            <h4 class="page-title">Details</h4>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-12">
            <div class="white-box">
                <form class="form-horizontal form-material">

                    <!--ID-->
                    <div class="form-group">
                        @Html.LabelFor(x => x.chucvus.MaChucVu, htmlAttributes: new { @class = "col-md-12" })
                        <div class="col-md-12">
                            @Html.TextBoxFor(x => x.chucvus.MaChucVu, htmlAttributes: new { @class = "form-control form-control-line", @disabled = "disabled" })
                        </div>
                    </div>

                    <!--Position Name-->
                    <div class="form-group">
                        @Html.LabelFor(x => x.chucvus.TenChucVu, htmlAttributes: new { @class = "col-md-12" })
                        <div class="col-md-12">
                            @Html.TextBoxFor(x => x.chucvus.TenChucVu, htmlAttributes: new { @class = "form-control form-control-line", @disabled = "disabled" })
                        </div>
                    </div>

                    <!--Back to list-->
                    <div class="form-group">
                        <div class="col-sm-12">
                            @Html.ActionLink("Back to list", "Index", "ChucVu")
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
    <!-- /.row -->
