@using QuanLyNhanVien_Client.Models;

@model PhongBan

<div class="row bg-title">
    <div class="col-lg-3 col-md-4 col-sm-4 col-xs-12">
        <h4 class="page-title">Department</h4>
    </div>
    <div class="col-lg-9 col-sm-8 col-md-8 col-xs-12">
        <a href="@Url.Action("Create","PhongBan")" target="_blank" class="btn btn-danger pull-right m-l-20 btn-rounded btn-outline hidden-xs hidden-sm waves-effect waves-light">Create Department</a>
    </div>
</div>
<div class="row">
    <div class="col-sm-12">
        <div class="white-box">
            <div class="table-responsive">
                <table class="table">
                    <thead>
                        <tr>
                            <th style="font-weight:bold;">@Html.DisplayNameFor(model => model.TenPhongBan)</th>
                            <th style="font-weight:bold;">@Html.DisplayNameFor(model => model.SoDienThoai) </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in ViewBag.lstPhongBans)
                        {
                            <tr>
                                <td>@item.TenPhongBan</td>
                                <td>@item.SoDienThoai</td>
                                <td>
                                    @Html.ActionLink("Update", "Edit", new { id = item.MaPhongBan }) |
                                    @Html.ActionLink("Information", "Details", new { id = item.MaPhongBan }) |
                                    @Html.ActionLink("Delete", "Delete", new { id = item.MaPhongBan }, new { onClick = "return confirm('Are you sure want to delete?');" })
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
