@using QuanLyNhanVien_Client.ViewModel;

@model NhanVienViewModel

<div class="row bg-title">
    <div class="col-lg-3 col-md-4 col-sm-4 col-xs-12">
        <h4 class="page-title">Create Employee</h4>
    </div>
</div>

<div class="row">
    <div class="col-sm-12">
        <div class="white-box">
            @using (Html.BeginForm("Create", "NhanVien", FormMethod.Post, htmlAttributes: new { @class = "form-horizontal form-material" }))
            {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true, "", htmlAttributes: new { @class = "text-danger" })

                <!--ID-->
                @Html.HiddenFor(x => x.nhanviens.MaNhanVien);

                <!--Name Employee-->
                <div class="form-group">
                    @Html.LabelFor(x => x.nhanviens.HoTen, htmlAttributes: new { @class = "col-md-12" })
                    <div class="col-md-12">
                        @Html.TextBoxFor(x => x.nhanviens.HoTen, htmlAttributes: new { @class = "form-control form-control-line", @placeholder = "Nguyễn Văn A" })
                        @Html.ValidationMessageFor(x => x.nhanviens.HoTen, "", htmlAttributes: new { @class = "text-danger" })
                    </div>
                </div>

                <!--Sex-->
                <div class="form-group">
                    @Html.LabelFor(x => x.nhanviens.GioiTinh, htmlAttributes: new { @class = "col-md-12" })
                    <div class="col-md-12">
                        @Html.TextBoxFor(x => x.nhanviens.GioiTinh, htmlAttributes: new { @class = "form-control form-control-line", @placeholder = "Nam" })
                        @Html.ValidationMessageFor(x => x.nhanviens.GioiTinh, "", htmlAttributes: new { @class = "text-danger" })
                    </div>
                </div>

                <!--BirthPlace-->
                <div class="form-group">
                    @Html.LabelFor(x => x.nhanviens.NgaySinh, htmlAttributes: new { @class = "col-md-12" })
                    <div class="col-md-12">
                        @Html.TextBoxFor(x => x.nhanviens.NgaySinh, htmlAttributes: new { @class = "form-control form-control-line", type = "date" })
                        @Html.ValidationMessageFor(x => x.nhanviens.NgaySinh, "", htmlAttributes: new { @class = "text-danger" })
                    </div>
                </div>

                <!--CMND-->
                <div class="form-group">
                    @Html.LabelFor(x => x.nhanviens.CMND, htmlAttributes: new { @class = "col-md-12" })
                    <div class="col-md-12">
                        @Html.TextBoxFor(x => x.nhanviens.CMND, htmlAttributes: new { @class = "form-control form-control-line", @placeholder = "025381234" })
                        @Html.ValidationMessageFor(x => x.nhanviens.CMND, "", htmlAttributes: new { @class = "text-danger" })
                    </div>
                </div>

                <!--Nation-->
                <div class="form-group">
                    @Html.LabelFor(x => x.nhanviens.QuocGia, htmlAttributes: new { @class = "col-md-12" })
                    <div class="col-md-12">
                        @Html.TextBoxFor(x => x.nhanviens.QuocGia, htmlAttributes: new { @class = "form-control form-control-line", @placeholder = "Việt nam" })
                        @Html.ValidationMessageFor(x => x.nhanviens.QuocGia, "", htmlAttributes: new { @class = "text-danger" })
                    </div>
                </div>

                <!--Religion-->
                <div class="form-group">
                    @Html.LabelFor(x => x.nhanviens.TonGiao, htmlAttributes: new { @class = "col-md-12" })
                    <div class="col-md-12">
                        @Html.TextBoxFor(x => x.nhanviens.TonGiao, htmlAttributes: new { @class = "form-control form-control-line", @placeholder = "Không có" })
                        @Html.ValidationMessageFor(x => x.nhanviens.TonGiao, "", htmlAttributes: new { @class = "text-danger" })
                    </div>
                </div>

                <!--Current Address-->
                <div class="form-group">
                    @Html.LabelFor(x => x.nhanviens.DiaChiHienTai, htmlAttributes: new { @class = "col-md-12" })
                    <div class="col-md-12">
                        @Html.TextBoxFor(x => x.nhanviens.DiaChiHienTai, htmlAttributes: new { @class = "form-control form-control-line", @placeholder = "69 Võ Văn Ngân, phường Bình Thọ, quận Thủ Đức, TPHCM" })
                        @Html.ValidationMessageFor(x => x.nhanviens.DiaChiHienTai, "", htmlAttributes: new { @class = "text-danger" })
                    </div>
                </div>

                <!--Phone-->
                <div class="form-group">
                    @Html.LabelFor(x => x.nhanviens.SoDienThoai, htmlAttributes: new { @class = "col-md-12" })
                    <div class="col-md-12">
                        @Html.TextBoxFor(x => x.nhanviens.SoDienThoai, htmlAttributes: new { @class = "form-control form-control-line", @placeholder = "0969123456" })
                        @Html.ValidationMessageFor(x => x.nhanviens.SoDienThoai, "", htmlAttributes: new { @class = "text-danger" })
                    </div>
                </div>

                <!--Email-->
                <div class="form-group">
                    @Html.LabelFor(x => x.nhanviens.Email, htmlAttributes: new { @class = "col-md-12" })
                    <div class="col-md-12">
                        @Html.TextBoxFor(x => x.nhanviens.Email, htmlAttributes: new { @class = "form-control form-control-line", @placeholder = "example@gmail.com" })
                        @Html.ValidationMessageFor(x => x.nhanviens.Email, "", htmlAttributes: new { @class = "text-danger" })
                    </div>
                </div>

                <!--Button-->
                <div class="form-group">
                    <div class="col-md-offset-6 col-md-10">
                        <input type="submit" value="Register Employee" class="btn btn-success" />
                    </div>
                </div>
            }
            <!--Back to list-->
            <div class="form-group">
                <div class="col-sm-12">
                    @Html.ActionLink("Back to list", "Index", "NhanVien")
                </div>
            </div>
        </div>
    </div>
</div>
