@using QuanLyNhanVien_Client.Models;

@model  IEnumerable<NhanVien>

    <div class="row bg-title">
        <div class="col-lg-3 col-md-4 col-sm-4 col-xs-12">
            <h4 class="page-title">Dashboard</h4>
        </div>
    </div>
    <!-- row -->
    <div class="row">
        <!--col -->
        <div class="col-lg-4 col-md-4 col-sm-12 col-xs-12">
            <div class="white-box">
                <div class="col-in row">
                    <div class="col-md-6 col-sm-6 col-xs-6">
                        <i data-icon="E" class="linea-icon linea-basic"></i>
                        <h4 class="text-muted vb">TOTAL EMPLOYEE</h4>
                    </div>
                    <div class="col-md-6 col-sm-6 col-xs-6">
                        <h3 class="counter text-right m-t-15 text-danger">@ViewBag.totalEmployee</h3>
                    </div>
                    <div class="col-md-12 col-sm-12 col-xs-12">
                        <div class="progress">
                            <div class="progress-bar progress-bar-danger" role="progressbar" aria-valuenow="40" aria-valuemin="0" aria-valuemax="100" style="width: 40%"> <span class="sr-only">40% Complete (success)</span> </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- /.col -->
        <!--col -->
        <div class="col-lg-4 col-md-4 col-sm-12 col-xs-12">
            <div class="white-box">
                <div class="col-in row">
                    <div class="col-md-6 col-sm-6 col-xs-6">
                        <i class="linea-icon linea-basic" data-icon="&#xe01b;"></i>
                        <h4 class="text-muted vb">TOTAL DEPARTMENT</h4>
                    </div>
                    <div class="col-md-6 col-sm-6 col-xs-6">
                        <h3 class="counter text-right m-t-15 text-megna">@ViewBag.totalDepartment</h3>
                    </div>
                    <div class="col-md-12 col-sm-12 col-xs-12">
                        <div class="progress">
                            <div class="progress-bar progress-bar-megna" role="progressbar" aria-valuenow="40" aria-valuemin="0" aria-valuemax="100" style="width: 40%"> <span class="sr-only">40% Complete (success)</span> </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- /.col -->
        <!--col -->
        <div class="col-lg-4 col-md-4 col-sm-12 col-xs-12">
            <div class="white-box">
                <div class="col-in row">
                    <div class="col-md-6 col-sm-6 col-xs-6">
                        <i class="linea-icon linea-basic" data-icon="&#xe00b;"></i>
                        <h4 class="text-muted vb">TOTAL POSITION</h4>
                    </div>
                    <div class="col-md-6 col-sm-6 col-xs-6">
                        <h3 class="counter text-right m-t-15 text-primary">@ViewBag.totalPosition</h3>
                    </div>
                    <div class="col-md-12 col-sm-12 col-xs-12">
                        <div class="progress">
                            <div class="progress-bar progress-bar-primary" role="progressbar" aria-valuenow="40" aria-valuemin="0" aria-valuemax="100" style="width: 40%"> <span class="sr-only">40% Complete (success)</span> </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- /.col -->
    </div>
    <!-- /.row -->
    <!--row -->
    <div class="row">
        <div class="col-sm-12">
            <div class="white-box">
                <h3 class="box-title">
                    Recent employees
                    <div class="col-md-2 col-sm-4 col-xs-12 pull-right">
                        <select class="form-control pull-right row b-none">
                            <option>2017</option>
                            <option>2018</option>
                            <option>2019</option>
                            <option>2020</option>
                            <option>2021</option>
                        </select>
                    </div>
                </h3>
                <div class="table-responsive">
                    <table class="table">
                        <thead>
                            <tr>
                                <th style="font-weight:bold;">@Html.DisplayNameFor(model=>model.HoTen)</th>
                                <th style="font-weight:bold;">@Html.DisplayNameFor(model => model.GioiTinh)</th>
                                <th style="font-weight:bold;">@Html.DisplayNameFor(model=>model.NgaySinh)</th>
                                <th style="font-weight:bold;">@Html.DisplayNameFor(model => model.CMND)</th>
                                <th style="font-weight:bold;">@Html.DisplayNameFor(model => model.QuocGia)</th>
                                <th style="font-weight:bold;">@Html.DisplayNameFor(model => model.TonGiao)</th>
                                <th style="font-weight:bold;">@Html.DisplayNameFor(model => model.DiaChiHienTai)</th>
                                <th style="font-weight:bold;">@Html.DisplayNameFor(model => model.SoDienThoai)</th>
                                <th style="font-weight:bold;">@Html.DisplayNameFor(model => model.Email)</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.HoTen</td>
                                    <td>@item.GioiTinh </td>
                                    <td>@item.NgaySinh.Value.ToString("dd/MM/yyyy")</td>
                                    <td>@item.CMND</td>
                                    <td>@item.QuocGia</td>
                                    <td>@item.TonGiao</td>
                                    <td>@item.DiaChiHienTai</td>
                                    <td>@item.SoDienThoai</td>
                                    <td>@item.Email</td>
                                </tr>
                            }
                        </tbody>
                    </table> <a href="@Url.Action("Index","NhanVien")">Check all the employee</a>
                </div>
            </div>
        </div>
    </div>
    <!-- /.row -->


 