@model QuanLyNhanVien_Client.Models.NhanVien_PhongBan

<div class="row bg-title">
    <div class="col-lg-3 col-md-4 col-sm-4 col-xs-12">
        <h4 class="page-title">Update</h4>
    </div>
</div>
<div class="row">
    <div class="col-sm-12">
        <div class="white-box">
            @using (Html.BeginForm("ChangePassword", "TaiKhoan", FormMethod.Post, htmlAttributes: new { @class = "form-horizontal form-material" }))
            {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                @Html.HiddenFor(x => x.MaNV_PB)
                @Html.HiddenFor(x => x.MaNhanVien)
                @Html.HiddenFor(x => x.MaPhongBan)
                @Html.HiddenFor(x => x.MaChucVu)
                @Html.HiddenFor(x => x.TenTaiKhoan)

                <!--Username-->
                <div class="form-group">
                    @Html.LabelFor(x => x.TenTaiKhoan, htmlAttributes: new { @class = "col-md-12" })
                    <div class="col-md-12">
                        @Html.TextBoxFor(x => x.TenTaiKhoan, htmlAttributes: new { @class = "form-control form-control-line", @disabled = "disabled" })
                        @Html.ValidationMessageFor(x => x.TenTaiKhoan, "", new { @class = "text-danger" })
                    </div>
                </div>

                <!--Old password-->
                <div class="form-group">
                    @Html.LabelFor(x => x.MatKhau, htmlAttributes: new { @class = "col-md-12" })
                    <div class="col-md-12">
                        @Html.TextBoxFor(x => x.MatKhau, htmlAttributes: new { @class = "form-control form-control-line", @type = "password" })
                        @Html.ValidationMessageFor(x => x.MatKhau, "", new { @class = "text-danger" })
                    </div>
                </div>

                <!--New password-->
                <div class="form-group">
                    @Html.LabelFor(x => x.MatKhauMoi, htmlAttributes: new { @class = "col-md-12" })
                    <div class="col-md-12">
                        @Html.TextBoxFor(x => x.MatKhauMoi, htmlAttributes: new { @class = "form-control form-control-line", @type="password" })
                        @Html.ValidationMessageFor(x => x.MatKhauMoi, "", new { @class = "text-danger" })
                    </div>
                </div>

                <!--Repeat password-->
                <div class="form-group">
                    @Html.LabelFor(x => x.RepeatMatKhau, htmlAttributes: new { @class = "col-md-12" })
                    <div class="col-md-12">
                        @Html.TextBoxFor(x => x.RepeatMatKhau, htmlAttributes: new { @class = "form-control form-control-line", @type = "password" })
                        @Html.ValidationMessageFor(x => x.RepeatMatKhau, "", new { @class = "text-danger" })
                    </div>
                </div>

                <!--Button-->
                <div class="form-group">
                    <div class="col-md-offset-5 col-md-10">
                        <input type="submit" value="Change Password" class="btn btn-success" />
                    </div>
                </div>
            }
            <!--Back to list-->
            <div class="form-group">
                <div class="col-sm-12">
                    @Html.ActionLink("Back to list", "Index")
                </div>
            </div>
        </div>
    </div>
</div>
<!-- /.row -->
