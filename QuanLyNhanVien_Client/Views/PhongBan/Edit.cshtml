@model QuanLyNhanVien_Client.Models.PhongBan

<div class="row bg-title">
    <div class="col-lg-3 col-md-4 col-sm-4 col-xs-12">
        <h4 class="page-title">Update</h4>
    </div>
</div>
<div class="row">
    <div class="col-sm-12">
        <div class="white-box">
            @using (Html.BeginForm("Edit", "PhongBan", FormMethod.Post, htmlAttributes: new { @class = "form-horizontal form-material" }))
            {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                <!--ID Department-->
                @Html.HiddenFor(x => x.MaPhongBan)

                <!--Department Name-->
                <div class="form-group">
                    @Html.LabelFor(x => x.TenPhongBan, htmlAttributes: new { @class = "col-md-12" })
                    <div class="col-md-12">
                        @Html.TextBoxFor(x => x.TenPhongBan, htmlAttributes: new { @class = "form-control form-control-line" })
                        @Html.ValidationMessageFor(x => x.TenPhongBan, "", new { @class = "text-danger" })
                    </div>
                </div>

                <!--Department Phone-->
                <div class="form-group">
                    @Html.LabelFor(x => x.SoDienThoai, htmlAttributes: new { @class = "col-md-12" })
                    <div class="col-md-12">
                        @Html.TextBoxFor(x => x.SoDienThoai, htmlAttributes: new { @class = "form-control form-control-line" })
                        @Html.ValidationMessageFor(x => x.SoDienThoai, "", new { @class = "text-danger" })
                    </div>
                </div>

                <!--Button-->
                <div class="form-group">
                    <div class="col-md-offset-5 col-md-10">
                        <input type="submit" value="Save" class="btn btn-success" />
                    </div>
                </div>
            }
            <!--Back to list-->
            <div class="form-group">
                <div class="col-sm-12">
                    @Html.ActionLink("Back to list", "Index", "PhongBan")
                </div>
            </div>
        </div>
    </div>
</div>
<!-- /.row -->
