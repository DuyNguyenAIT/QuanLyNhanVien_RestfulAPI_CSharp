@using QuanLyNhanVien_Client.ViewModel;

@model PhongBanViewModel

<div class="row bg-title">
    <div class="col-lg-3 col-md-4 col-sm-4 col-xs-12">
        <h4 class="page-title">Details</h4>
    </div>
</div>
<div class="row">
    <div class="col-sm-12">
        <div class="white-box">
            <form class="form-horizontal form-material">
                <!--ID-->
                <div class="form-group">
                    @Html.LabelFor(x => x.phongbans.MaPhongBan, htmlAttributes: new { @class = "col-md-12" })
                    <div class="col-md-12">
                        @Html.TextBoxFor(x => x.phongbans.MaPhongBan, htmlAttributes: new { @class = "form-control form-control-line", @disabled = "disabled" })
                    </div>
                </div>
                <!--Department Name-->
                <div class="form-group">
                    @Html.LabelFor(x => x.phongbans.TenPhongBan, htmlAttributes: new { @class = "col-md-12" })
                    <div class="col-md-12">
                        @Html.TextBoxFor(x => x.phongbans.TenPhongBan, htmlAttributes: new { @class = "form-control form-control-line", @disabled = "disabled" })
                    </div>
                </div>
                <!--Department Phone-->
                <div class="form-group">
                    @Html.LabelFor(x => x.phongbans.SoDienThoai, htmlAttributes: new { @class = "col-md-12" })
                    <div class="col-md-12">
                        @Html.TextBoxFor(x => x.phongbans.SoDienThoai, htmlAttributes: new { @class = "form-control form-control-line", @disabled = "disabled" })
                    </div>
                </div>
                <!--Back to list-->
                <div class="form-group">
                    <div class="col-sm-12">
                        @Html.ActionLink("Back to list", "Index", "PhongBan")
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
<!-- /.row -->
<!--List of employee-->
<div class="row">
    <div class="col-sm-12">
        <div class="white-box">
            <div class="table-responsive">
                <table class="table">
                    <thead>
                        <tr>
                            <th>@Html.DisplayNameFor(x => x.HoTen)</th>
                            <th>@Html.DisplayNameFor(x => x.GioiTinh)</th>
                            <th>@Html.DisplayNameFor(x => x.NgaySinh)</th>
                            <th>@Html.DisplayNameFor(x => x.CMND)</th>
                            <th>@Html.DisplayNameFor(x => x.QuocGia)</th>
                            <th>@Html.DisplayNameFor(x => x.DiaChiHienTai)</th>
                            <th>@Html.DisplayNameFor(x => x.Email)</th>
                            <th>@Html.DisplayNameFor(x => x.TenChucVu)</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (ViewBag.lstNhanVien_PB != null)
                        {
                            foreach (var item in ViewBag.lstNhanVien_PB)
                            {
                                <tr>
                                  <td>@item.HoTen</td>
                                    <td>@item.GioiTinh</td>
                                    <td>@item.NgaySinh</td>
                                    <td>@item.CMND</td>
                                    <td>@item.QuocGia</td>
                                    <td>@item.DiaChiHienTai</td>
                                    <td>@item.Email</td>
                                    <td>@item.TenChucVu</td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
<!--End List-->
