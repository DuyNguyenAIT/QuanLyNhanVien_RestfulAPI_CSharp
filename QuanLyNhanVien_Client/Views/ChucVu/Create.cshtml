@using QuanLyNhanVien_Client.ViewModel;

@model ChucVuViewModel

<div class="row bg-title">
    <div class="col-lg-3 col-md-4 col-sm-4 col-xs-12">
        <h4 class="page-title">Create Position</h4>
    </div>
</div>
<div class="row">
    <div class="col-sm-12">
        <div class="white-box">
            @using (Html.BeginForm("Create", "ChucVu", FormMethod.Post, htmlAttributes: new { @class = "form-horizontal form-material" }))
            {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true, "", htmlAttributes: new { @class = "text-danger" })

                <!--ID-->
                @Html.HiddenFor(x => x.chucvus.MaChucVu)

                <!--Literacy Name-->
                <div class="form-group">
                    @Html.LabelFor(x => x.chucvus.TenChucVu, htmlAttributes: new { @class = "col-md-12" })
                    <div class="col-md-12">
                        @Html.TextBoxFor(x => x.chucvus.TenChucVu, htmlAttributes: new { @class = "form-control form-control-line", @placeholder= "Giám đốc" })
                        @Html.ValidationMessageFor(x => x.chucvus.TenChucVu, "", htmlAttributes: new { @class = "text-danger" })
                    </div>
                </div>

                <!--Button-->
                <div class="form-group">
                    <div class="col-md-offset-5 col-md-12">
                        <input type="submit" value="Create" class="btn btn-success" />
                    </div>
                </div>
            }
            <!--Back to list-->
            <div class="form-group">
                <div class="col-sm-12">
                    @Html.ActionLink("Back to list", "Index", "ChucVu")
                </div>
            </div>
        </div>
    </div>
</div>
<!-- /.row -->
